<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/homeFragmentDesign"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">


        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/tour_louge" />

        <TextView
            android:id="@+id/nameHome"
            android:layout_width="282dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageHome"
            android:layout_toRightOf="@+id/imageHome"
            android:text="Md.Sweet khan Sunny"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/timeHome"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/nameHome"
            android:layout_below="@+id/nameHome"
            android:fontFamily="@font/roboto"
            android:text="12min ago"
            android:textColor="@color/whiteBlack"
            android:textSize="16sp"
            tools:ignore="UnknownId"
            android:layout_alignLeft="@+id/nameHome" />

        <TextView
            android:id="@+id/newsHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="Details"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:gravity="start" />

    </RelativeLayout>

</android.support.v7.widget.CardView>