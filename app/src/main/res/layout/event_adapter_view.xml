<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/eventShowAdapter">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="3dp"
        android:layout_margin="2dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:padding="5dp"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:textColor="@color/Black"
            />

        <TextView
            android:id="@+id/EventPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eventName"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="Event Places"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/EventDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/EventPlace"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="Event Event Time from - to"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/EventNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/EventDuration"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="Event Number"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/eventAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/EventNumber"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="Event Author"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />





    </RelativeLayout>




</android.support.v7.widget.CardView>